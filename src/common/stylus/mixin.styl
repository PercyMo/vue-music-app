//背景图片
bg-image($url)
    background-image url($url + "@2x.png")
    @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
      background-image url($url + "@3x.png")
      
//不换行
no-wrap()
    overflow hidden
    white-space nowrap
    text-overflow ellipsis

//一像素边框
border-1px($color)
  position relative
  &:after
    content ' '
    width 100%
    height 1px
    display block
    position absolute
    left 0
    bottom 0
    border-top 1px solid $color
    transform scaleY(.5)